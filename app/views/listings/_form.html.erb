<%= form_with(model: listing, local: true) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= form.label :style_id %>
    <%= form.select(:style_id, @styles.map{|b| [b.name, b.id]}) %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :color %>
    <%= form.text_field :color %>
  </div>

  <div class="field">
    <%= form.label :fabric %>
    <%= form.text_field :fabric %>
  </div>

  

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
      <%= form.label :category %>
      <% categories.each do|option| %>
            <div>
                <%= form.radio_button :category, option %>
                <%= form.label "category_#{option}".to_sym, option %>

            <div>
        <% end %>
    </div>

    <div>
      <%= form.label :picture %> <%= form.file_field :picture, accept:
      'image/png,image/gif,image/jpeg,image/jpg' %>
    </div>


    <div>
      <div class="actions">
        <%= form.submit %>
      </div>
    </div>
<% end %>
