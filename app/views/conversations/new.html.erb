<h1>New Conversation</h1>
<%# Form for conversation %>
<%# drop down menu to select user for messaging %>
<%= form_tag conversations_path, method: :post do %>
  <div>
    <%= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :email) %>
  </div>
<%# Subject for the conversation %>
  <div>
    <%= text_field_tag :subject, nil, placeholder: "Subject" %>
  </div>
<%# Body for the messaging %>
  <div>
    <%= text_area_tag :body, nil, placeholder: "Leave a comment" %>
  </div>

  <%= submit_tag %>

<% end %>
<%# Link to chatroom and to listings %>
<%= link_to "Chatroom", conversations_path%> |
<%= link_to "Back", listings_path %>

